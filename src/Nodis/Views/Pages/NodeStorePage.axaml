<v:ReactiveUserControl
    x:Class="Nodis.Views.NodeStorePage" xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:md="clr-namespace:Nodis.Views.Markdown"
    xmlns:v="clr-namespace:Nodis.Views" xmlns:vm="clr-namespace:Nodis.ViewModels"
    d:DesignHeight="450" d:DesignWidth="800"
    x:DataType="vm:NodeStorePageViewModel" x:TypeArguments="vm:NodeStorePageViewModel"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="1*,3*">
        <ListBox
            Grid.Column="0"
            ItemsSource="{Binding Nodes}"
            SelectedItem="{Binding SelectedNode}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Node.Description}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <md:MarkdownViewer Grid.Column="1" Markdown="{Binding SelectedNode.ReadmeMarkdown.Value, FallbackValue={x:Null}}"/>
    </Grid>
</v:ReactiveUserControl>
