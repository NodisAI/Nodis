<Styles
    xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="clr-namespace:Nodis.Frontend.Views">
    <Style Selector="TextBlock.Markdown">
        <Style Selector="^.Heading1">
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <Style Selector="^.Heading2">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style Selector="^.Heading3">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="^.Heading4">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style Selector="^.Heading5">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style Selector="^.Heading6">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Style>

    <Style Selector="Border.Markdown">
        <Style Selector="^.FencedCodeBlock">
            <Setter Property="Grid.ColumnSpan" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="{DynamicResource SukiCardBackground}"/>
        </Style>
        <Style Selector="^.CodeInline">
            <Setter Property="Background" Value="{DynamicResource SukiCardBackground}"/>
        </Style>
        <Style Selector="^.QuoteBlock">
            <Setter Property="BorderThickness" Value="2, 0, 0, 0"/>
            <Setter Property="Padding" Value="15, 5, 0, 5"/>
            <Setter Property="Margin" Value="0, 0, 0, 12"/>
            <Setter Property="Background" Value="{DynamicResource SukiCardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SukiCardBackground}"/>
        </Style>
    </Style>

    <Style Selector="Button.Markdown.FencedCodeBlock">
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="md|InlineHyperlink">
        <Style Selector="^ Button">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent"/>
            </Style>
        </Style>
        <Style Selector="^ TextBlock">
            <Setter Property="Foreground" Value="DodgerBlue"/>
            <Setter Property="TextDecorations" Value="Underline"/>
        </Style>
    </Style>
</Styles>
